{
  "name": "bethlehem-township-crime-map",
  "version": "1.0.0",
  "description": "Bethlehem Township PA Crime Map - KONOMI Standard Implementation",
  "scripts": {
    "dev": "npm run css && eleventy --serve",
    "build": "npm run css && eleventy",
    "css": "tailwindcss -i src/assets/css/main.css -o dist/css/main.css --minify",
