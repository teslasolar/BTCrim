  "keywords": ["crime-map", "bethlehem-township", "konomi", "data-visualization"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.0",
    "tailwindcss": "^3.4.0",
    "lunr": "^2.3.9",
    "alpinejs": "^3.13.0"
  },
  "dependencies": {
    "leaflet": "^1.9.4",
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "csv-parse": "^5.5.0",
    "node-fetch": "^3.3.2"
  }
}
